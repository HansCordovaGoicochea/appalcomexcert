<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/lltextoAhorroCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8sp"
            android:layout_alignParentLeft="true">

            <customfonts.MyTextView_Poppins_Bold
                android:id="@+id/txtCurso"
                android:textSize="11sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:singleLine="true"
                android:text="NOMBRE DEL CURSO TEST 1"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


            <customfonts.MyTextView_Poppins_Bold
                android:id="@+id/txtEmpresa"
                android:textSize="11sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="NOMBRE DE LA EMPRESA TEST 1 dsjfsdfhds"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"/>

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txtFecha"
                android:textSize="9sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="14 de Noviembre 2020"
                android:textColor="#9DA5B7"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lltextoAhorroCard"
            android:layout_alignParentRight="true">


            <ImageView
                android:background="?android:selectableItemBackgroundBorderless"
                android:id="@+id/imgCertificado"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pdf"
                tools:targetApi="lollipop" />


        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>


